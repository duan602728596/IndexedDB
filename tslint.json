{
  "defaultSeverity": "error",
  "rules": {
    "no-empty-interface": true,
    "no-parameter-reassignment": true,
    "no-var-requires": true,
    "curly": [
      true,
      "ignore-same-line"
    ],
    "no-duplicate-super": true,
    "no-empty": true,
    "no-eval": true,
    "no-for-in-array": true,
    "no-var-keyword": true,
    "triple-equals": true,
    "use-isnan": true,
    "indent": [
      true,
      "spaces",
      2
    ],
    "class-name": true,
    "import-spacing": true,
    "new-parens": true,
    "space-before-function-paren": [
      true,
      {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "typedef": [
      true,
      "call-signature",
      "arrow-call-signature",
      "parameter",
      "arrow-parameter",
      "property-declaration",
      "variable-declaration",
      "member-variable-declaration",
      "object-destructuring",
      "array-destructuring"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "strict-type-predicates": true,
    "type-literal-delimiter": true,
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock"
    ]
  },
  "linterOptions": {
    "exclude": [
      "node_modules",
      "lib",
      "*.json"
    ]
  }
}